<% layout("/layouts/boilerplate") %>
<body>
    

    <div class="NewBlog ms-5 me-5">
<h2 class="mt-3 mb-3 "><i><u>Edit the Blog</u></i></h2>

        <form method="post" action="/blogHere/<%= userBlog.id %>?_method=PATCH" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="title" name="title" class="form-control" id="title" value="<%= userBlog.title %>" required>
              <div class="invalid-feedback">Please Enter Valid Title</div>
            </div>
            <div class="mb-3">
              <label for="about" class="form-label">About</label>
              <textarea class="form-control" name="about" id="about" rows="3" required><%= userBlog.about %> </textarea>
              <div class="invalid-feedback">Please write something in about section</div>
            </div>
           
            <button type="submit" class="btn btn-danger">Edit</button>
          </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>