<% layout("/layouts/boilerplate") %>
<body>
    
   <div class="NewBlog">
    <h2 class=" mt-3"><u><i>Sign Up </i></u></h2>
    <form method="post" action="/blogHere/SignUp" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">User Name</label>
          <div class="d-flex justify-content-center" style="flex-wrap: wrap;">
          <input type="username" name="username" class="form-control" id="username" style="width: min-content;" required>
          <div class="invalid-feedback">Enter Valid username</div>
        </div>

          <label for="email" class="form-label">Email address</label>
          <div class="d-flex justify-content-center" style="flex-wrap: wrap;">
          <input type="email" name="email" class="form-control" id="email" style="width: min-content;" required>
          <div class="invalid-feedback">Enter valid Email</div>
        </div>

        <label class="password" class="form-label">Password</label>
          <div class="d-flex justify-content-center" style="flex-wrap: wrap;">
          <input type="password" name="password" class="form-control" id="password" style="width: min-content;">
          <div class="invalid-feedback">Enter valid Password</div>
        </div>
        
        
        <button type="submit" class="btn btn-primary mt-3">SignUp</button>
      </form>

   </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>